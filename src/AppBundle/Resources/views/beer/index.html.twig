{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="dashboard_graph">

                <div class="row x_title">
                    <div class="col-md-6">
                        <h3>{{ "beer.pages.list"|trans }}</h3>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12 col-xs-12">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <th>{{ "labels.name"|trans }}</th>
                            <th>{{ "labels.actions"|trans }}</th>
                        </thead>
                        <tbody>
                            {% for beer in pagination %}
                                <tr>
                                    <td>{{ beer.name }}</td>
                                    <td>
                                        <a href="{{ path('showBeer', {id: beer.id}) }}" class="btn btn-primary">
                                            <i class="fa fa-eye" aria-hidden="true"></i> {{ "labels.show"|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="pull-right navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}

